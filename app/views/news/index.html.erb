<div id="news">
  <div id="mainimage">
    <%= image_tag 'mainimages/news_mainimage.jpg' %>
  </div>
  <div id="content">
    <table>
      <% @news.each.with_index(1) do |value, index| %>
        <tr class="<%= news_column_class(index) %>" >
          <th><%= value.date.strftime("%-m/%-d") %></th>
          <td><%= value.content.html_safe %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div id="banner_big">
    <%= ad_img %>
  </div>

</div>
