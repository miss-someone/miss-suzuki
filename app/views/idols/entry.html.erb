<div id="rules">
  <div id="mainimage">
    <%= image_tag 'mainimages/mainimage_idolgroup.jpg' %>
  </div>
  <div id="content">
    <div class="menu">
      <ul>
        <li><a href="/idols#content">概要</a></li>
        <li><a href="/idols/info#content">応募要項</a></li>
        <li>申し込み</li>
      </ul>
    </div>
  </div>

<%= form_for @idol, url: {:action => 'confirm'} do |f| %>

  <h1>説明会お申し込み</h1>

  <% if @idol.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @idol.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form1">
  <table class="table">
    <tr><td>お名前</td></tr>
    <tr><td><%= f.text_field :name, class: "half" %></td></tr>
    <tr><td>年齢</td></tr>
    <tr><td><%= f.text_field :age, class: "half" %></td></tr>
    <tr><td>(学生の場合は)学校名と学年(該当しない場合は空欄で構いません。)</td></tr>
    <tr><td><%= f.text_field :school, class: "half" %></td></tr>
    <tr><td>身長</td></tr>
    <tr><td><%= f.text_field :height, class: "half" %></td></tr>
    <tr><td>出身地</td></tr>
    <tr><td><%= f.text_field :hometown, class: "half" %></td></tr>
    <tr><td>ご自宅の最寄駅</td></tr>
    <tr><td><%= f.text_field :station, class: "half" %></td></tr>
    <tr><td>メールアドレス</td></tr>
    <tr><td><%= f.text_field :email, class: "full" %></td></tr>
    <tr><td>現在、芸能プロダクションに所属していますか？</td></tr>
    <tr class="box">
      <td>
        <%= f.radio_button :production, true %>はい
        <%= f.radio_button :production, false, checked: true %>いいえ
      </td>
    </tr>
    <tr><td>説明会に参加できる日程を教えてください。（複数選択可）</td></tr>
    <tr>
      <td>
        <%= f.check_box :date, {multiple: true}, 1, false %> 3/8(火)18:00-19:00
        <%= f.check_box :date, {multiple: true}, 2, false %> 3/8(火)19:00-20:00
        <%= f.check_box :date, {multiple: true}, 3, false %> 3/11(金)18:00-19:00
        <%= f.check_box :date, {multiple: true}, 4, false %> 3/11(金)19:00-20:00
        <%= f.check_box :date, {multiple: true}, 5, false %> 3/15(火)18:00-19:00
        <%= f.check_box :date, {multiple: true}, 6, false %> 3/15(火)19:00-20:00
        <%= f.check_box :date, {multiple: true}, 7, false %> 3/18(金)18:00-19:00
        <%= f.check_box :date, {multiple: true}, 8, false %> 3/18(金)19:00-20:00
        <%= f.check_box :date, {multiple: true}, 0, false %> その他
      </td>
    </tr>
  </table>
  </div>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>



  <div id="banner_big" style="margin-top:10px;">
    <%= ad_img %>
  </div>
</div>
